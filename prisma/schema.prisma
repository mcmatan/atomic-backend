generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String       @id @default(uuid())
  email    String     @unique
  userName     String?
  workflows Workflow[]
}

model Workflow {
  id                String       @id @default(uuid())
  url       String
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  steps          Step[]
  name String
  completedDate  DateTime?
  idempotentKey String
  result            Json?
  @@unique([userId, name])
}

model Step {
  id                String       @id @default(uuid())
  workflowId     String
  workflow       Workflow @relation(fields: [workflowId], references: [id])
  url            String
  scheduleDate   DateTime?
  result            Json?
  completedDate  DateTime?
}
